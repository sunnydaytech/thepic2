<style>
.comment {
  border: solid 1px;
  position: relative;  
  list-style-type: none;
  list-style-position: inside;
  min-height: 60px; 
  margin-top: 4px;
  padding: 2px 2px;
  border-color: rgb(226, 217, 217) rgba(194, 180, 180, 0.12) rgba(214, 232, 214, 0.01) rgb(203, 200, 200);
}
.comment-content {
  display: inline-block;
  word-wrap: break-word;
  margin: 1px 0 5px;    
  width: 100%;
  padding-right: 72px;   
}
.comment-header {
  margin-top: 8px;
}
.comment .profile {
  overflow: hidden;  
}
.comment .profile {
  height: 50px;
  width: 70px;
  font-size: 15px;
  right: 2px;
  top: 7px;
  position: absolute;  
}
.comment .profile img {
  width: 25px;
  height: 25px;
  padding: 0;
  margin: 0 auto;
  border: 0;
  display: block;
}
.comment .profile p {
  text-align: center;
}
</style>
<ul class="comments">
  <div class="comment-header">
    <% if (user) { %>
      <% include comment-inbox.ejs %>    
    <% } else { %>
       使用<% include login-buttons.ejs %>登陆后评论
    <% } %>
  </div>
  <% comments.forEach(function(comment) {%>
    <li class="comment clear">
      <p class="comment-content">
        <%= comment.comment %>
      </p>
      <div class="profile">
        <a href="/user/<%= comment.user.id %>">
          <% if (comment.user && comment.user.profilePic) { %>
            <img src="<%= comment.user.profilePic %>">
          <% }%>
          <% if (comment.user && comment.user.displayName) { %>
            <p><%= comment.user.displayName %></p>
          <% }%>
        </a>
      </div>
    </li>
  <% }) %>
</ul>

