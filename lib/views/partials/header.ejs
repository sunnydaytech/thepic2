<style>
  .header {
    position: relative;
    padding-top: 2px;  
    padding-bottom: 3px;
    height: 38px;
    border-bottom: solid #DACFCF 1px;
  }
  .header .profile-container {
    float: right;
    margin-right: 30px;
  }
  .notification {
    float: right;
    background-color: rgba(236, 4, 4, 0.8);
    margin: 1px 5px;
    padding: 3px;  
    border-radius: 5px 5px 5px 5px;
    -moz-border-radius: 5px 5px 5px 5px;
    -webkit-border-radius: 5px 5px 5px 5px;
    border: 0.5px solid #6e6b6e;
    width: 25px;
    height: 25px;
    text-align: center;
  }
  .notification a {
  }
  .notification.empty {
    display: none;
  }
  .fa-upload {
    position: absolute;
    left: 65px;
    top: 10px;
  }
</style>
<div class="header">
  <% include header-logo.ejs %>
  <% if (pageName !== 'index') { %>
    <a href="/">
      <i class="fa fa-upload"></i>
    </a>
  <% } %>
  <div class="profile-container">
    <% if (user) { %>
        <% include profile.ejs %>
      </div>
      <div class="notification <% if (user.notificationCount == 0) { %> empty <% } %>">
        <% if (user) { %>
          <a href="/notification">
            <% if (user.notificationCount) { %>
              <%= user.notificationCount %>
            <% } %>
          </a>
        <% } %>
    <% } else { %>
      <header-profile
        display-name="游客"
        profile-pic="/img/guest-profile.png">
      </header-profile>
    <% } %>
  </div>
</div>

