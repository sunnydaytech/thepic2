<style>
  ul {
    margin: 20px auto 10px;
    width: 300px;
    list-style-type: none;
  }
  li {
    margin: 15px 0;
  }
</style>
<ul>
  <% notifi.notifications.forEach(function(notification) {%>
    <li>
      <a href="/game/<%= notification.imageId %>/play">
        <% if(notification.type == 1) { %> <!-- TYPE_SOLVED -->
          <%= notification.sender.displayName %>
        solved in 
          <%= notification.stepCount %> steps.
        <% } else if(notification.type == 2) { %> <!-- TYPE_COMMENT -->
          <%= notification.sender.displayName %>
        comment
          <%= notification.comment %>
        <% } %>
      </a>
    </li>
  <% })%>
</ul>
